doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Lista de Usuarios
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")

  body(class="bg-gray-100")
    
    .container.mx-auto.py-8
      h1.text-3xl.font-bold.mb-6 Lista de Usuarios

      .overflow-x-auto
        table(class="min-w-full bg-white border border-gray-200")
          thead
            tr
              th(class="py-3 px-6 bg-gray-200 font-bold uppercase text-sm text-gray-600 text-left") ID
              th(class="py-3 px-6 bg-gray-200 font-bold uppercase text-sm text-gray-600 text-left") Nombre
              th(class="py-3 px-6 bg-gray-200 font-bold uppercase text-sm text-gray-600 text-left") Email
              th(class="py-3 px-6 bg-gray-200 font-bold uppercase text-sm text-gray-600 text-left") Acciones
          tbody
            each usuario in usuarios
              tr(class="border-b border-gray-200")
                td(class="py-3 px-6 text-left") #{usuario.id}
                td(class="py-3 px-6 text-left") #{usuario.nombre}
                td(class="py-3 px-6 text-left") #{usuario.email}
                td(class="py-3 px-6 text-left")
                  div.flex.space-x-4
                    a(href=`/auth/editar/${usuario.id}` class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded")
                      | Editar

                    form(method="POST" action=`/auth/eliminar/${usuario.id}?_method=DELETE`)
                      button(type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded")
                        | Eliminar
